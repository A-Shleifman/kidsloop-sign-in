{
  "name": "kidsloop-sign-in",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.11.5",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/node": "^12.19.3",
    "@types/react": "^16.9.55",
    "@types/react-dom": "^16.9.9",
    "chokidar-cli": "^2.1.0",
    "cross-env": "^7.0.2",
    "if-env": "^1.0.4",
    "is-ci": "^2.0.0",
    "npm-run-all": "^4.1.5",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-scripts": "4.0.0",
    "serve": "^11.3.2",
    "styled-components": "^5.2.1",
    "tailwindcss": "^1.9.6",
    "twin.macro": "^1.12.0",
    "typescript": "^4.0.5",
    "web-vitals": "^0.2.4"
  },
  "scripts": {
    "build:tailwind": "tailwind build src/tailwind.css -o src/tailwind.output.css",
    "watch:tailwind": "chokidar 'src/**/*.css' 'src/**/*.scss' --ignore src/tailwind.output.css -c 'npm run build:tailwind'",
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:dev": "npm-run-all build:tailwind --parallel watch:tailwind start:react",
    "start:prod": "npm run build && serve -S build",
    "start:react": "react-scripts start",
    "prebuild": "run-s build:tailwind",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "cy:run": "cypress run",
    "cy:open": "cypress open",
    "test:e2e": "is-ci && npm run test:e2e:run || npm run test:e2e:dev",
    "pretest:e2e:run": "npm run build",
    "test:e2e:run": "cross-env BROWSER=none start-server-and-test start http://localhost:3000 cy:run",
    "test:e2e:dev": "cross-env BROWSER=none start-server-and-test start http://localhost:3000 cy:open"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "babelMacros": {
    "twin": {
      "config": "tailwind.config.js",
      "preset": "styled-components",
      "autoCssProp": true,
      "debugProp": true,
      "debugPlugins": false,
      "debug": false
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@jackfranklin/test-data-bot": "^1.3.0",
    "@testing-library/cypress": "^7.0.1",
    "@types/jest": "^26.0.15",
    "@types/styled-components": "^5.1.4",
    "cypress": "^5.5.0",
    "eslint-plugin-cypress": "^2.11.2",
    "prettier": "^2.1.2",
    "start-server-and-test": "^1.11.5",
    "ts-jest": "^26.4.3"
  }
}
